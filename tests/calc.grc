def sum(a, b, op: int) : int {
  if(op == 1)
    return a + b;  
  if(op == 2)
    return a - b;  
  if(op == 3)
    return a * b;
  if(op == 4)
    return a / b;
  if(op == 5)
    return a % b;
  return 0;
}

def console(r: int) {
  write "result: %d", r;
  return;  
}

def main() : int {
  var a = 0, b = 0: int;
  var op : int;
  var i, r : int;
  
  write "SEJA BEM VINDO";

  for(i = 0; i < 5; i++) { 
    write "a:";
    read a;
    write "b:";
    read b;
    
    write "ESCOLHA UMA OPC";
    write "   1. ADD";
    write "   2. SUB";
    write "   3. MUL";
    write "   4. DIV";
    write "   4. MOD";

    write "op:";
    read op;

    r = sum(a, b, op);

    console(r);
  }

  return 0;
}
